// Define the database
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Define the Prisma Client generator
generator client {
  provider = "prisma-client-js"
}

// Models
model User {
  id      String   @id @default(cuid())
  email   String   @unique
  uploads Upload[]
}

model Upload {
  id         Int      @id @default(autoincrement())
  name       String   @map("filename") // ðŸ‘ˆ maps to existing "filename" column
  url        String?
  content    String
  summary    String?
  tags       String   @default("")     // Stored as a comma-separated string
  createdAt  DateTime @default(now())
  replacedAt DateTime?
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}
